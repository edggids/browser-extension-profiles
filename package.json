{
  "name": "profile-switcher-svelte",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "npm run check && vite build && npm run build-bg",
    "build-bg": "vite build -c vite.config-background.ts",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui --coverage.enabled=true"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@sveltejs/vite-plugin-svelte": "^2.5.3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/svelte": "^4.1.0",
    "@types/chrome": "^0.0.235",
    "@vitest/coverage-v8": "^1.4.0",
    "@vitest/ui": "^1.4.0",
    "jsdom": "^24.0.0",
    "sass": "^1.62.1",
    "svelte": "^3.58.0",
    "svelte-check": "^3.3.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.0",
    "vitest": "^1.4.0"
  },
  "dependencies": {
    "@types/node": "^20.1.5"
  }
}
